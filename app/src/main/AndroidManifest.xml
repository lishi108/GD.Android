<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.guodong">

    <application
        android:name=".BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".business.view.spalash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".business.view.user.LoginActivity"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".business.view.user.RegisterActivity"
            android:windowSoftInputMode="stateHidden">

        </activity>
        <activity android:name=".business.view.MainActivity"/>
        <activity android:name=".business.view.user.SetttingActivity"/>
    </application>

</manifest>