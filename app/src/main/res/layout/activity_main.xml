<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/mainFrameLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp0.5"
        android:background="@color/colorcccccc"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/homeLayout"
            style="@style/MainTableBottomLayout"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:id="@+id/homeImageView"
                style="@style/MainTableBottomImageView"
                android:contentDescription="@null"
                android:src="@drawable/home0" />

            <TextView
                style="@style/MainTableBottomTextView"
                android:text="@string/home" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/buyLayout"
            style="@style/MainTableBottomLayout"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:id="@+id/buyImageView"
                style="@style/MainTableBottomImageView"
                android:contentDescription="@null"
                android:src="@drawable/cart0" />

            <TextView
                style="@style/MainTableBottomTextView"
                android:text="@string/buy" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/findLayout"
            style="@style/MainTableBottomLayout"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:id="@+id/findImageView"
                android:contentDescription="@null"
                style="@style/MainTableBottomImageView"
                android:src="@drawable/find0" />

            <TextView
                style="@style/MainTableBottomTextView"
                android:text="@string/find" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/personLayout"
            style="@style/MainTableBottomLayout"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:id="@+id/personImageView"
                android:contentDescription="@null"
                style="@style/MainTableBottomImageView"
                android:src="@drawable/person0" />

            <TextView
                style="@style/MainTableBottomTextView"
                android:text="@string/person" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
