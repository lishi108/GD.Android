<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp80">
        <ImageView
            android:id="@+id/gameIcon"
            android:layout_width="@dimen/dp50"
            android:layout_height="@dimen/dp50"
            android:layout_marginLeft="@dimen/dp30"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/dnf"/>
        <TextView
            android:id="@+id/gameInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp10"
            android:layout_centerVertical="true"
            android:textSize="@dimen/fontSize10"
            android:textColor="@color/colorff4040"
            android:text="6.8折"
            android:layout_gravity="center_vertical|right"/>
        <TextView
            android:id="@+id/gameName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color333333"
            android:textSize="@dimen/fontSize14"
            android:gravity="clip_vertical"
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@id/gameIcon"
            android:layout_toLeftOf="@id/gameInfo"
            android:layout_centerVertical="true"
            android:lines="1"
            android:ellipsize="end"
            android:layout_marginLeft="@dimen/dp20"
            android:layout_marginRight="@dimen/dp10"
            android:text="地下城勇士"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp0.5"
            android:layout_alignParentBottom="true"
            android:background="@color/colorcccccc"/>
    </RelativeLayout>
</LinearLayout>
